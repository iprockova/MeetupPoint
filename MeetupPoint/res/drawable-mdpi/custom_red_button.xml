<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/dark_red" />
            <stroke
                android:width="1dp"
                android:color="@color/light_red" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


    <item>        
        <shape>
            <gradient
                android:endColor="@color/dark_red"
                android:startColor="@color/light_red"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/dark_red" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
